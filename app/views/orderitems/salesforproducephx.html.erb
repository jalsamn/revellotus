<div class="page-header">
  <h1>Phoenix - Product sold by date <%= params[:start_date].to_date %> to  <%= params[:end_date].to_date %></h1>


</div>

<table class="table table-striped table-bordered table-condensed">
<thead>
<tr>
  <th colspan="1"></th>
  <th colspan="1">Item</th>
  <th colspan="1">Sold</th>
  <th colspan="1">Category</th>

</tr>
</thead>
<tbody>
    <% @paginatable_array.each do |person| %>
      <tr>
        <td></td>
        <td><%= person.name %></td>
        <td><%= person.totalsold %></td>
        <td><%= person.category %></td>

      </tr>
    <% end %>
<%= paginate @paginatable_array %>
  </tbody>
</table>
