<div class="page-header">
  <h3>Product sold vs Inventory <%= params[:start_date].to_date %> to  <%= params[:end_date].to_date %></h3>
  <h3>Max Sold Selected: <%= params[:msold] %></h3>
  <h3>Min Inventory Selected: <%= params[:minventory] %></h3>
  
</div>

<table class="table table-striped table-bordered table-condensed">
<thead>
<tr>
  <th colspan="1"></th>
  <th colspan="1">Item</th>
  <th colspan="1">Sold</th>
  <th colspan="1">Inventory</th>

</tr>
</thead>
<tbody>
    <% @paginatable_array.each do |person| %>
      <tr>
        <td></td>
        <td><%= person.name %></td>
        <td><%= person.totalsold %></td>
        <td><%= person.inventoryonhand %></td>
   
      </tr>
    <% end %>
<%= paginate @paginatable_array %>
  </tbody>
</table>
