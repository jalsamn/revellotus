<div class="page-header">
  <h1>Revenue of Produce for both location for date: <%= params[:start_date].to_date %> to  <%= params[:end_date].to_date %></h1>


</div>

<table class="table table-striped table-bordered table-condensed">
<thead>
<tr>
  <th colspan="1"></th>
  <th colspan="1">Item</th>
  <th colspan="1">Revenue</th>

</tr>
</thead>
<tbody>
  <% totalrev = 0 %>
  <% @itemsperday.each do |person| %>
    <% totalrev = totalrev + person.totalsold %>
      <tr>
        <td></td>
        <td><%= person.name %></td>
        <td><%= person.totalsold %></td>
   
      </tr>
    <% end %>
  
  </tbody>
</table>

  <h1> Total Revenue: $<%= totalrev %> </h1>

