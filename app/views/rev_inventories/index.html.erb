<h1>Listing rev_inventories</h1>

<table>
  <thead>
    <tr>
      <th>Update date</th>
      <th>Product</th>
      <th>Starting amount</th>
      <th>Added amount</th>
      <th>Threshold</th>
      <th>Sold amount</th>
      <th>Actual amount</th>
      <th>Theoretical ending inventory</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rev_inventories.each do |rev_inventory| %>
      <tr>
        <td><%= rev_inventory.update_date %></td>
        <td><%= rev_inventory.product %></td>
        <td><%= rev_inventory.starting_amount %></td>
        <td><%= rev_inventory.added_amount %></td>
        <td><%= rev_inventory.threshold %></td>
        <td><%= rev_inventory.sold_amount %></td>
        <td><%= rev_inventory.actual_amount %></td>
        <td><%= rev_inventory.theoretical_ending_inventory %></td>
        <td><%= link_to 'Show', rev_inventory %></td>
        <td><%= link_to 'Edit', edit_rev_inventory_path(rev_inventory) %></td>
        <td><%= link_to 'Destroy', rev_inventory, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

