<h1>Listing rinventors</h1>

<table>
  <thead>
    <tr>
      <th>Update date</th>
      <th>Rproductid</th>
      <th>Starting amount</th>
      <th>Added amount</th>
      <th>Threshold</th>
      <th>Sold amount</th>
      <th>Actual amount</th>
      <th>Theoretical ending inventory</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rinventors.each do |rinventor| %>
      <tr>
        <td><%= rinventor.update_date %></td>
        <td><%= rinventor.rproductid %></td>
        <td><%= rinventor.starting_amount %></td>
        <td><%= rinventor.added_amount %></td>
        <td><%= rinventor.threshold %></td>
        <td><%= rinventor.sold_amount %></td>
        <td><%= rinventor.actual_amount %></td>
        <td><%= rinventor.theoretical_ending_inventory %></td>
        <td><%= link_to 'Show', rinventor %></td>
        <td><%= link_to 'Edit', edit_rinventor_path(rinventor) %></td>
        <td><%= link_to 'Destroy', rinventor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

