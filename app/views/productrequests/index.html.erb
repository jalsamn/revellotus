<h1>Listing Requests</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Created On</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Location</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @productrequests.each do |productrequest| %>
      <tr>
        <td><%= productrequest.name %></td>
        <td><%= productrequest.created_at.strftime('%B %e %Y') %></td>
        <td><%= productrequest.email %></td>
        <td><%= productrequest.phone %></td>
        <td><%= productrequest.location %></td>
        <td><%= productrequest.status %></td>
        <td><%= link_to 'Fullfilled', set_fullfilled_path(pid: productrequest.id) %></td>
        <td><%= link_to 'NotFullfilled', set_notfullfilled_path(pid: productrequest.id) %></td>
        <td><%= link_to 'Destroy', productrequest, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

